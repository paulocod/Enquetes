{
  "compilerOptions": {
    "allowJs": true,
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "lib": ["ES2023"],
    "target": "ES2022",
    "module": "Node16",
    "rootDir": "./src",
    "typeRoots" : ["./node_modules/@types", "./src/@types"],
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/*.spec.js"
  ]
}